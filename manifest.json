{
  "manifest_version": 3,
  "name": "LMStudio Summarizer",
  "version": "1.0",
  "description": "Summarize the current page using LMStudio.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_popup_width": 800,
    "default_popup_height": 1000
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
